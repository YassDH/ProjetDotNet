                                {
                                        <div class="progress-bar" style="width: @(@survey.nbVotesChoix6*100/@survey.votesNumber)%">@(@survey.nbVotesChoix6*100/@survey.votesNumber)%</div>
                                }
                                else
                                {

                                    <div class="progress-bar" style="width: 0%">
                                        0%
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="card-footer text-muted">
                        Closed
                    </div>
                </div>
            </div>
        }
        }
    </div>
</div>