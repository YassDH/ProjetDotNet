                                }
                                else
                                {

                                    <div class="progress-bar" style="width: 0%">
                                        0%
                                    </div>
                                }
                            </div>
                        }@if (@survey.Option5 != null){
                            <p class="card-text text-start  text-success">@survey.Option5</p>
                            <div class="progress" role="progressbar" aria-label="Example with label" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                @if (@survey.votesNumber != 0)
                                {
                                        <div class="progress-bar" style="width: @(@survey.nbVotesChoix5*100/@survey.votesNumber)%">@(@survey.nbVotesChoix5*100/@survey.votesNumber)%</div>
